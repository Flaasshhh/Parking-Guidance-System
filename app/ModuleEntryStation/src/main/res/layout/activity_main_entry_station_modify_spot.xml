<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityEntryStationModifySpot"
    android:id="@+id/ModifySpotLayoutid"

    >


    <!-- Buttons for add or delete spot -->

    <Button
        android:id="@+id/buttonAddNewSpot"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:text="Add Spot"
        app:layout_constraintEnd_toStartOf="@+id/ButtonDeleteSpot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- This will appear if delete spot button is pressed -->

    <Button
        android:id="@+id/ButtonDeleteSpot"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:text="Delete Spot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textModifySpotParkingSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:text="Parking Spot"

        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddNewSpot" />

    <Spinner
        android:id="@+id/spinnerModifySpotParkingSpot"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toEndOf="@+id/textModifySpotParkingSpot"
        app:layout_constraintTop_toBottomOf="@+id/ButtonDeleteSpot" />


    <Button
        android:id="@+id/ButtonDelete"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerModifySpotParkingSpot"
        app:layout_constraintVertical_bias="0.129" />


    <!-- For the Add Spot -->

    <TextView
        android:id="@+id/textModifySpotSpotNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="96dp"
        android:text="Spot Number"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddNewSpot" />

    <EditText
        android:id="@+id/editTextSpotNumber"
        android:layout_width="132dp"
        android:layout_height="57dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:inputType="number"
        android:hint="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toEndOf="@+id/textModifySpotSpotNumber"
        app:layout_constraintTop_toBottomOf="@+id/ButtonDeleteSpot" />

    <Button
        android:id="@+id/ButtonAdd"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textModifySpotSpotNumber"
        app:layout_constraintVertical_bias="0.221" />


</androidx.constraintlayout.widget.ConstraintLayout>