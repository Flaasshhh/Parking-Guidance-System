<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityExitStation">


    <!-- Enter Ticket ID -->


    <TextView
        android:id="@+id/textEntryStationTicketId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Ticket ID "
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--View & Checkout buttons -->

    <!-- Print parking hours on screen -->


    <EditText
        android:id="@+id/editTextTicketID"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="123123"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/textEntryStationTicketId"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonExitView"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:text="View"
        app:layout_constraintEnd_toStartOf="@+id/buttonCheckOut"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEntryStationTicketId" />

    <Button
        android:id="@+id/buttonCheckOut"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="12dp"
        android:text="Check Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTicketID" />

    <!-- Print payment on screen -->

    <TextView
        android:id="@+id/textViewLabelParkingHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Parking hours"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewResultParkingHours"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExitView" />

    <TextView
        android:id="@+id/textViewResultParkingHours"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCheckOut"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:id="@+id/textViewResultToPay"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text=""
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultMinuteRate"
        app:layout_constraintVertical_bias="0.229" />

    <TextView
        android:id="@+id/textViewLabelTopay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Pay"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewResultToPay"
        app:layout_constraintHorizontal_bias="0.316"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabelMinuteRate"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/textViewLabelMinuteRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minute Rate"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabelParkingHours"
        app:layout_constraintVertical_bias="0.234" />

    <TextView
        android:id="@+id/textViewResultMinuteRate"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultParkingHours"
        app:layout_constraintVertical_bias="0.118" />


</androidx.constraintlayout.widget.ConstraintLayout>